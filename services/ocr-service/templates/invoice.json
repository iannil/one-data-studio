{
  "name": "增值税发票模板",
  "description": "用于提取增值税发票的关键信息",
  "type": "invoice",
  "category": "financial",
  "supported_formats": ["pdf", "image"],
  "fields": [
    {
      "name": "发票类型",
      "key": "invoice_type",
      "required": false,
      "description": "如: 增值税专用发票、增值税普通发票"
    },
    {
      "name": "发票代码",
      "key": "invoice_code",
      "required": false,
      "validation": {
        "type": "string",
        "pattern": "^\\d{10,12}$"
      }
    },
    {
      "name": "发票号码",
      "key": "invoice_number",
      "required": true,
      "validation": {
        "type": "invoice_number"
      }
    },
    {
      "name": "开票日期",
      "key": "invoice_date",
      "required": true,
      "validation": {
        "type": "date"
      }
    },
    {
      "name": "购买方名称",
      "key": "buyer_name",
      "required": false,
      "validation": {
        "type": "string",
        "min_length": 2
      }
    },
    {
      "name": "购买方税号",
      "key": "buyer_tax_id",
      "required": false,
      "validation": {
        "type": "credit_code"
      }
    },
    {
      "name": "购买方地址电话",
      "key": "buyer_address_phone",
      "required": false
    },
    {
      "name": "购买方开户行账号",
      "key": "buyer_bank_account",
      "required": false
    },
    {
      "name": "销售方名称",
      "key": "seller_name",
      "required": false,
      "validation": {
        "type": "string",
        "min_length": 2
      }
    },
    {
      "name": "销售方税号",
      "key": "seller_tax_id",
      "required": false,
      "validation": {
        "type": "credit_code"
      }
    },
    {
      "name": "销售方地址电话",
      "key": "seller_address_phone",
      "required": false
    },
    {
      "name": "销售方开户行账号",
      "key": "seller_bank_account",
      "required": false
    },
    {
      "name": "货物或应税劳务名称",
      "key": "item_names",
      "required": false
    },
    {
      "name": "规格型号",
      "key": "specification",
      "required": false
    },
    {
      "name": "单位",
      "key": "unit",
      "required": false
    },
    {
      "name": "数量",
      "key": "quantity",
      "required": false,
      "validation": {
        "type": "number",
        "min_value": 0
      }
    },
    {
      "name": "单价",
      "key": "unit_price",
      "required": false,
      "validation": {
        "type": "number",
        "min_value": 0
      }
    },
    {
      "name": "金额",
      "key": "amount",
      "required": false,
      "validation": {
        "type": "number",
        "min_value": 0
      }
    },
    {
      "name": "税率",
      "key": "tax_rate",
      "required": false,
      "validation": {
        "type": "number",
        "min_value": 0,
        "max_value": 1
      }
    },
    {
      "name": "税额",
      "key": "tax_amount",
      "required": false,
      "validation": {
        "type": "number",
        "min_value": 0
      }
    },
    {
      "name": "价税合计（小写）",
      "key": "total_amount",
      "required": true,
      "validation": {
        "type": "number",
        "min_value": 0
      }
    },
    {
      "name": "价税合计（大写）",
      "key": "total_amount_cn",
      "required": false
    },
    {
      "name": "备注",
      "key": "remark",
      "required": false
    }
  ],
  "tables": [
    {
      "name": "商品明细",
      "key": "items",
      "required": false,
      "header_keywords": ["货物", "劳务", "名称", "规格", "单位", "数量", "单价"],
      "fields": [
        {"name": "序号", "key": "index"},
        {"name": "货物或应税劳务名称", "key": "name"},
        {"name": "规格型号", "key": "specification"},
        {"name": "单位", "key": "unit"},
        {"name": "数量", "key": "quantity"},
        {"name": "单价", "key": "unit_price"},
        {"name": "金额", "key": "amount"},
        {"name": "税率", "key": "tax_rate"},
        {"name": "税额", "key": "tax_amount"}
      ]
    }
  ],
  "post_processing": {
    "date_format": "YYYY-MM-DD",
    "amount_format": "number",
    "tax_rate_format": "percent"
  }
}
