{
  "name": "收据模板",
  "description": "用于提取收据的关键信息",
  "type": "receipt",
  "category": "financial",
  "supported_formats": ["pdf", "image"],
  "fields": [
    {
      "name": "收据编号",
      "key": "receipt_number",
      "required": true,
      "keywords": ["收据编号", "收据号", "No.", "编号"]
    },
    {
      "name": "收据日期",
      "key": "receipt_date",
      "required": true,
      "validation": {
        "type": "date"
      },
      "keywords": ["收据日期", "开票日期", "日期", "Date"]
    },
    {
      "name": "收据类型",
      "key": "receipt_type",
      "required": false,
      "keywords": ["收据类型", "类型"]
    },
    {
      "name": "付款方名称",
      "key": "payer_name",
      "required": true,
      "keywords": ["付款方", "交款单位", "付款单位", "付款人", "Payer", "From"]
    },
    {
      "name": "付款方身份证号",
      "key": "payer_id_card",
      "required": false,
      "validation": {
        "type": "id_card"
      },
      "keywords": ["身份证号", "证件号码"]
    },
    {
      "name": "收款方名称",
      "key": "payee_name",
      "required": true,
      "keywords": ["收款方", "收款单位", "收款人", "Payee", "To"]
    },
    {
      "name": "收款事由",
      "key": "payment_reason",
      "required": false,
      "keywords": ["收款事由", "款项用途", "用途", "事由", "Payment For"]
    },
    {
      "name": "收款金额",
      "key": "amount",
      "required": true,
      "validation": {
        "type": "number",
        "min_value": 0
      },
      "keywords": ["收款金额", "金额", "收款数额", "Amount"]
    },
    {
      "name": "金额大写",
      "key": "amount_cn",
      "required": false,
      "keywords": ["金额大写", "大写", "大写金额"]
    },
    {
      "name": "币种",
      "key": "currency",
      "default": "CNY",
      "keywords": ["币种", "货币"]
    },
    {
      "name": "收款方式",
      "key": "payment_method",
      "required": false,
      "keywords": ["收款方式", "付款方式", "现金", "转账", "支票", "Payment Method"]
    },
    {
      "name": "经办人",
      "key": "handler",
      "required": false,
      "keywords": ["经办人", "经手人", "出纳", "Cashier"]
    },
    {
      "name": "审核人",
      "key": "auditor",
      "required": false,
      "keywords": ["审核人", "复核人"]
    },
    {
      "name": "收款单位盖章",
      "key": "seal_required",
      "required": false,
      "keywords": ["收款单位盖章", "盖章"]
    },
    {
      "name": "备注",
      "key": "remark",
      "required": false,
      "keywords": ["备注", "说明", "Remark"]
    }
  ],
  "tables": [],
  "cross_field_validation": [
    {
      "rule": "amount_check",
      "description": "金额大写与小写应一致",
      "fields": ["amount", "amount_cn"],
      "validation": "amount_to_chinese(amount) == amount_cn",
      "severity": "warning"
    }
  ],
  "post_processing": {
    "date_format": "YYYY-MM-DD",
    "amount_format": "number"
  },
  "layout_detection": {
    "signature_regions": [
      {"keywords": ["收款人", "经手人", "出纳", "经办人"], "label": "payee_signature"},
      {"keywords": ["付款人签字", "交款人签字"], "label": "payer_signature"},
      {"keywords": ["审核人", "复核人"], "label": "auditor_signature"},
      {"keywords": ["日期", "年", "月", "日"], "label": "date_field"}
    ],
    "seal_regions": [
      {"keywords": ["收款单位", "财务专用章", "收据专用章"], "label": "company_seal"}
    ],
    "amount_detection": {
      "keywords": ["金额", "￥", "$", "¥"],
      "cn_keywords": ["壹", "贰", "叁", "肆", "伍", "陆", "柒", "捌", "玖", "拾", "佰", "仟", "万", "元", "角", "分"]
    }
  }
}
