# ONE-DATA-STUDIO Local Development Environment
# 复制此文件为 .env 并填写实际值
# cp .env.example .env

# ============================================
# 基础设施密码 (必须配置)
# ============================================

# MySQL 配置
MYSQL_ROOT_PASSWORD=root_password_change_me
MYSQL_DATABASE=onedata
MYSQL_USER=onedata
MYSQL_PASSWORD=onedata_password_change_me

# Redis 配置
REDIS_PASSWORD=redis_password_change_me

# MinIO 配置
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minio_password_change_me

# ============================================
# ETL 引擎配置
# ============================================

# Kettle/Carte 配置
KETTLE_CARTE_USER=cluster
KETTLE_CARTE_PASSWORD=kettle_password_change_me

# Apache Hop 配置
HOP_SERVER_USER=cluster
HOP_SERVER_PASSWORD=hop_password_change_me

# ============================================
# LLM/AI 配置
# ============================================

# vLLM 配置
VLLM_CHAT_MODEL=Qwen/Qwen2.5-1.5B-Instruct
VLLM_EMBED_MODEL=BAAI/bge-base-zh-v1.5
VLLM_GPU_MEMORY_UTILIZATION=0.8
HF_TOKEN=your_huggingface_token_here

# 向量配置
EMBEDDING_DIM=768
VECTOR_ENABLED=true
VECTOR_FALLBACK_ENABLED=true
EMBEDDING_MOCK_ENABLED=false

# ============================================
# Label Studio 配置
# ============================================

LABEL_STUDIO_DB_USER=labelstudio
LABEL_STUDIO_DB_PASSWORD=labelstudio_password_change_me
LABEL_STUDIO_HOST=http://localhost:8009
LABEL_STUDIO_API_TOKEN=your_label_studio_api_token_here

# ============================================
# DolphinScheduler 配置
# ============================================

DOLPHINSCHEDULER_DB_USER=dolphinscheduler
DOLPHINSCHEDULER_DB_PASSWORD=dolphin_password_change_me

# ============================================
# Superset 配置
# ============================================

SUPERSET_SECRET_KEY=your_super_secret_key_change_me_this_must_be_random
SUPERSET_ADMIN_PASSWORD=admin123_change_me

# ============================================
# Keycloak 配置
# ============================================

KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin_change_me

# ============================================
# 开发模式配置
# ============================================

# 禁用认证 (仅开发环境)
AUTH_MODE=false

# OpenAI 配置 (可选)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=http://openai-proxy:8000

# ============================================
# 特性开关
# ============================================

# OpenMetadata 集成
OPENMETADATA_ENABLED=true

# Kettle ETL 引擎
KETTLE_ENABLED=true

# Great Expectations
GE_ENABLED=false

# Apache Hop ETL 引擎
HOP_ENABLED=false

# ShardingSphere 透明脱敏
SHARDINGSPHERE_ENABLED=false

# AI 特性
AI_FEATURES_ENABLED=true

# ============================================
# 资源限制 (根据内存调整)
# ============================================

# Elasticsearch JVM 内存
ES_JAVA_OPTS=-Xms512m -Xmx512m

# Kettle JVM 内存
KETTLE_JAVA_OPTS=-Xms512m -Xmx2g

# ============================================
# 日志配置
# ============================================

LOG_LEVEL=INFO
